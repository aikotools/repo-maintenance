{
  "name": "@aikotools/repo-maintenance",
  "version": "0.0.0-semantic-release",
  "private": false,
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "repohub": "./bin/repohub.js"
  },
  "files": [
    "dist/",
    "bin/"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "dev:server": "npx tsx --watch src/server/index.ts",
    "dev:client": "vite",
    "build": "tsc -p tsconfig.server.json && vite build",
    "build:check": "tsc --noEmit",
    "format": "prettier --write \"{src,tests}/**/*.{ts,tsx,css,json}\"",
    "lint": "eslint \"{src,tests}/**/*.{ts,tsx}\"",
    "test": "pnpm lint && pnpm build && pnpm depcheck && vitest --run --coverage",
    "depcheck": "depcheck",
    "start": "node bin/repohub.js"
  },
  "dependencies": {
    "@hono/node-server": "1.13.8",
    "@tanstack/react-query": "5.90.21",
    "@trpc/client": "11.10.0",
    "@trpc/react-query": "11.10.0",
    "@trpc/server": "11.10.0",
    "@xyflow/react": "12.10.0",
    "hono": "4.11.9",
    "lucide-react": "0.564.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "simple-git": "3.27.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/github": "11.0.0",
    "@semantic-release/npm": "12.0.0",
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "22.0.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "@vitest/coverage-v8": "4.0.18",
    "concurrently": "9.0.0",
    "depcheck": "1.4.7",
    "eslint": "10.0.0",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.5.0",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "semantic-release": "24.0.0",
    "tailwindcss": "4.1.18",
    "tsx": "4.19.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  }
}
